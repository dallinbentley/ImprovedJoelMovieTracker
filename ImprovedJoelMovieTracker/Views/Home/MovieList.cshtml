@{
}

@model MovieListViewModel 

<table class="table table-striped">
    <thead class="thead-dark">
        <tr><th scope="col">Category</th><th scope="col">Title</th><th scope="col">Year</th><th scope="col">Director</th><th scope="col">Rating</th><th scope="col">Edited</th><th scope="col">Lent To</th><th scope="col">Notes</th><th scope="col">Edit/Delete</th></tr>
    </thead>
    <tbody>
        @foreach (var x in Model.movies)
        {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>
                    <div class="btn-group">
                        <form asp-action="GoToEdit" method="post">
                            <input type="hidden" asp-for="MovieId" value="@x.MovieId" />
                            <button type="submit" class="btn btn-success">Edit</button>
                        </form>
                        <form asp-action="DeleteMovie" method="post">
                            <input type="hidden" asp-for="MovieId" value="@x.MovieId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>